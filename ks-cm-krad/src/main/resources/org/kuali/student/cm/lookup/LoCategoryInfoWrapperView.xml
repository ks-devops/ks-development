<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:p="http://www.springframework.org/schema/p"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
                           http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="LoCategoryInfoWrapper-DataObjectEntry" parent="DataObjectEntry">
        <property name="objectLabel" value="LoCategoryInfoWrapper"/>
        <property name="dataObjectClass" value="org.kuali.student.cm.course.form.LoCategoryInfoWrapper"/>
    </bean>

    <bean id="KS-LoCategoryInfoWrapper-View" parent="Uif-LookupView"
          p:onDocumentReadyScript="categoryTypeSelection('true');">
        <property name="viewName" value="KS-LoCategoryInfoWrapper-View"/>
        <property name="headerText" value="Select Categories"/>
        <property name="theme">
            <bean parent="KSTheme"/>
        </property>
        <property name="dataObjectClassName"
                  value="org.kuali.student.cm.course.form.LoCategoryInfoWrapper"/>
        <property name="viewHelperServiceClass"
                  value="org.kuali.student.cm.course.service.impl.LoCategoryInfoLookupableImpl"/>
        <property name="multipleValuesSelect" value="true"/>
        <property name="criteriaGroup.render" value="false"/>
        <property name="formClass" value="org.kuali.student.cm.course.form.LoCategoryTypeBrowseForm"/>
        <!-- Removing property. Looks like Rice no longer supports it: KULRICE-10618
        <property name="resultsGroup.layoutManager.richTable.showSearchAndExportOptions" value="true" />
        -->
        <property name="resultsGroup.includeLineSelectionField" value="true"/>

        <property name="resultsGroup.layoutManager.richTable.templateOptions">
            <map>
                <entry key="sDom" value="p"/>
            </map>
        </property>
        <!-- Must define the criteriaFields even though it's not being rendered, because of framework restriction. -->
        <property name="criteriaFields">
            <list>
                <bean parent="Uif-LookupCriteriaInputField" p:propertyName="name"/>
            </list>
        </property>
        <property name="page.items">
            <list>
                <ref bean="LoCategoryInfoWrapper-type-selection"/>
                <ref bean="LoCategoryInfoWrapper-type-checkboxes"/>
                <ref bean="LoCategoryInfoWrapper-Category-Filter"/>
            </list>
        </property>
        <property name="resultFields">
            <list>
                <bean parent="KS-Uif-DataField" p:propertyName="name" p:label="Category"/>
                <bean parent="KS-Uif-DataField" p:propertyName="typeName" p:label="Type"/>
            </list>
        </property>
        <property name="resultsGroup.layoutManager.actionColumnPlacement" value="RIGHT"/>
        <property name="resultsGroup.footer.items">
            <list>
                <bean id="LoCategoryInfoWrapper-type-selection" parent="Uif-HorizontalFieldGroup"
                      p:style="float: right;">
                    <property name="items">
                        <list>

                            <bean id="KSCM-AddCategoryButton" parent="Uif-PrimaryActionButton"
                                  p:methodToCall="returnSelected"
                                  p:actionLabel="Add Categories"
                                  p:preSubmitCall="setupMultiValueReturn();return true;"
                                  p:disabled="@{#form.selectedLookupResultsCache.size() == 0}" p:ajaxSubmit="false">
                                <property name="cssClasses">
                                    <list merge="true">
                                        <value>uif-returnSelectedAction</value>
                                    </list>
                                </property>
                            </bean>
                            <bean id="KS-CancelLo-Button" parent="Uif-CancelAction"
                                  p:onClickScript="closeLightbox();return false;"/>
                        </list>
                    </property>
                </bean>
            </list>
        </property>

    </bean>

    <bean id="LoCategoryInfoWrapper-type-selection" parent="Uif-HorizontalFieldGroup">
        <property name="items">
            <list>
                <bean parent="Uif-Message" p:id="type-selection-Message"
                      p:messageText="Filter by Category Type (">
                </bean>
                <bean parent="KS-Uif-ActionLink"
                      p:id="Lo-type-selection-select-all-link"
                      p:actionScript="categoryTypeSelection('true');"
                      p:actionLabel="Select All">
                </bean>
                <bean parent="Uif-Message" p:id="type-selection-Message-deliminator"
                      p:messageText="|">
                </bean>
                <bean parent="KS-Uif-ActionLink"
                      p:id="Lo-type-selection-deselect-all-link"
                      p:actionScript="categoryTypeSelection('fales');"
                      p:actionLabel="Clear All">
                </bean>
                <bean parent="Uif-Message" p:id="type-selection-Message-end"
                      p:messageText=")">
                </bean>

            </list>
        </property>
    </bean>

    <bean id="LoCategoryInfoWrapper-type-checkboxes" parent="Uif-VerticalBoxSection">
        <property name="items">
            <list>
                <bean id="KS-LoListedType-Checkbox-Group" parent="KS-Uif-InputField" p:propertyName="typeList"
                      p:onChangeScript="filterCategoriesByTypes();">
                    <property name="control">
                        <bean id="KS-LoListedType-Checkbox" parent="Uif-VerticalCheckboxesControl"/>
                    </property>
                    <property name="optionsFinder">
                        <bean class="org.kuali.student.lum.lu.ui.course.keyvalues.LoCategoryInfoTypeKeyValueFinder"
                              p:addBlankOption="false"/>
                    </property>
                </bean>
            </list>
        </property>
    </bean>

    <bean id="LoCategoryInfoWrapper-Category-Filter" parent="Uif-HorizontalFieldGroup">
        <property name="items">
            <list>
                <bean id="LoCategory-Category-Filter-Input" parent="KS-Uif-InputField-LabelLeft" p:label="Filter"
                      p:style="float: right;"
                      p:propertyName="categoryFilter" p:fieldLabel.style="float:left;"
                      p:fieldLabel.renderColon="true">
                    <property name="control">
                        <bean parent="KS-Uif-TextControl" p:size="30" p:onKeyUpScript="filterCategoriesByName();"/>
                    </property>
                </bean>
            </list>
        </property>
    </bean>

</beans>