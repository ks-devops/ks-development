<project xmlns="http://maven.apache.org/POM/4.0.0"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <parent>
        <groupId>org.kuali.student.db</groupId>
        <artifactId>ks-dbs</artifactId>
        <version>2.1.1-FR2-M1-SNAPSHOT</version>
    </parent>
    <artifactId>ks-impex</artifactId>
    <packaging>pom</packaging>
    <name>KS Impex</name>
    <description>Kuali Student Impex</description>
    <properties>
        <impex.metainf.context>org.kuali.common.util.metainf.spring.MpxConfig</impex.metainf.context>
        <impex.metainf.phase>prepare-package</impex.metainf.phase>
    </properties>
    <profiles>
        <profile>
            <!-- Load a db from the schema SQL + mpx files generated by Impex -->
            <id>db</id>
            <build>
                <plugins>
                    <plugin>
                        <groupId>org.kuali.maven.plugins</groupId>
                        <artifactId>spring-maven-plugin</artifactId>
                        <executions>
                            <execution>
                                <id>load</id>
                                <phase>initialize</phase>
                                <goals>
                                    <goal>load</goal>
                                </goals>
                                <configuration>
                                    <forceMojoExecution>true</forceMojoExecution>
                                    <injectMavenProject>true</injectMavenProject>
                                    <propertySourcesConfig>org.kuali.student.deploy.spring.InitAppDbPropertySourceConfig</propertySourcesConfig>
                                    <annotatedClasses>
                                    <annotatedClass>org.kuali.common.impex.spring.MpxSupplierConfig</annotatedClass>
                                    <annotatedClass>org.kuali.common.impex.spring.SchemaXmlSupplierConfig</annotatedClass>
                                    <annotatedClass>org.kuali.common.jdbc.spring.SqlControllerExecutableConfig</annotatedClass>
                                    </annotatedClasses>
                                </configuration>
                            </execution>
                        </executions>
                        <dependencies>
                            <!-- Add in the module specific dependencies -->
                            <dependency>
                                <groupId>org.kuali.student.db.impex</groupId>
                                <artifactId>ks-impex-rice-db</artifactId>
                                <version>${ks-impex-db.version}</version>
                            </dependency>
                            <dependency>
                                <groupId>org.kuali.student.db.impex</groupId>
                                <artifactId>ks-impex-app-db</artifactId>
                                <version>${ks-impex-db.version}</version>
                            </dependency>
                            <dependency>
                                <groupId>org.kuali.student.db.impex</groupId>
                                <artifactId>ks-impex-bundled-db</artifactId>
                                <version>${ks-impex-db.version}</version>
                            </dependency>
                            <dependency>
                                <groupId>org.kuali.common</groupId>
                                <artifactId>kuali-impex-producer</artifactId>
                                <version>${kuali-impex.version}</version>
                            </dependency>
                        </dependencies>
                    </plugin>
                </plugins>
            </build>
        </profile>
        <profile>
        	<id>ks-impex-bundled-db</id>
        	<properties>
        		<impex.init.application.config>ks-impex-bundled-db</impex.init.application.config>
        		<impex.schema.location>classpath:org/kuali/student/ks-impex-bundled-db/schema.xml</impex.schema.location>
        	</properties>
        </profile>
        <profile>
        	<id>ks-impex-app-db</id>
        	<properties>
        		<impex.groupId.path>org/kuali/student</impex.groupId.path>
				<impex.artifactId>ks-impex-app-db</impex.artifactId>
        		<impex.init.application.config>ks-impex-app-db</impex.init.application.config>
        		<impex.schema.location>classpath:org/kuali/student/ks-impex-app-db/schema.xml</impex.schema.location>
        	</properties>
        </profile>
        <profile>
        	<id>ks-impex-rice-db</id>
        	<properties>
        		<impex.groupId.path>org/kuali/student</impex.groupId.path>
				<impex.artifactId>ks-impex-rice-db</impex.artifactId>
        		<impex.init.application.config>ks-impex-rice-db</impex.init.application.config>
        		<impex.schema.location>classpath:org/kuali/student/ks-impex-rice-db/schema.xml</impex.schema.location>
        	</properties>
        </profile>
        <profile>
            <id>local</id>
            <properties>
                <db.vendor>oracle</db.vendor>
                <properties.decrypt>false</properties.decrypt>
                <oracle.dba.username>system</oracle.dba.username>
                <oracle.dba.password>manager</oracle.dba.password>
                <oracle.dba.url>jdbc:oracle:thin:@localhost:1521:XE</oracle.dba.url>
            </properties>
        </profile>
        <profile>
            <id>oracle</id>
            <properties>
                <db.vendor>oracle</db.vendor>
            </properties>
        </profile>
        <profile>
            <id>mysql</id>
            <properties>
                <db.vendor>mysql</db.vendor>
            </properties>
        </profile>
        <profile>
            <id>sonar</id>
            <properties>
                <db.branch.qualifier>_SONAR</db.branch.qualifier>
            </properties>
        </profile>
    </profiles>
</project>
